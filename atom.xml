<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>The Toolbelt | Brad Whittington</title>
 <link href="http://toolbelt.co.za/atom.xml" rel="self"/>
 <link href="http://toolbelt.co.za/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://toolbelt.co.za/</id>
 <author>
   <name>Brad Whittington</name>
   <email>brad@whijo.net</email>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://toolbelt.co.za/{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://toolbelt.co.za{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>
